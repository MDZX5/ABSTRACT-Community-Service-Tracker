<Page x:Class="MDZFBLACommunityService.PAEditStudent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MDZFBLACommunityService"
      mc:Ignorable="d" 
      d:DesignHeight="613" d:DesignWidth="940"
      Title="PAEditStudent">

    <Grid Background="#FFB1B1B1">
        <Button Content="Button" HorizontalAlignment="Left" Margin="105,141,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Select by ID" HorizontalAlignment="Left" Margin="109,57,0,0" VerticalAlignment="Top" Foreground="#DD000000"/>
        <TextBox HorizontalAlignment="Left" Height="30" Margin="109,86,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged" BorderBrush="#89000000"/>
        <Button x:Name="SelectStudentButton" Content="Select" HorizontalAlignment="Left" Margin="101,319,0,0" VerticalAlignment="Top" Width="75" Click="SelectStudentButton_Click"/>
        <Label Content="Select by Name" HorizontalAlignment="Left" Margin="105,235,0,0" VerticalAlignment="Top" Foreground="#DD000000"/>
        <ComboBox x:Name="selectedStudentComboBox" IsEditable="True" HorizontalAlignment="Left" Margin="109,264,0,0" VerticalAlignment="Top" Width="120" BorderBrush="#89000000" SelectionChanged="NameBox_SelectionChanged"/>
        <ListBox x:Name="StudentListBox" HorizontalAlignment="Left" Height="286" Margin="506,86,0,0" VerticalAlignment="Top" Width="381" Background="#FF2F2F2F" SelectionChanged="StudentListBox_SelectionChanged"/>

    </Grid>
</Page>

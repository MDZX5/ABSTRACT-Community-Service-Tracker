<Page x:Class="MDZFBLACommunityService.PAEditStudent"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MDZFBLACommunityService"
      mc:Ignorable="d" 
      d:DesignHeight="613" d:DesignWidth="940"
      Title="PAEditStudent">

    <Grid Background="#FF8B8787">
        <Button x:Name="SelectStudentButton" Content="Select" HorizontalAlignment="Left" Margin="14,169,0,0" VerticalAlignment="Top" Width="76" Click="SelectStudentButton_Click"/>
        <Label Content="Select by Name" HorizontalAlignment="Left" Margin="18,85,0,0" VerticalAlignment="Top" Foreground="#DD000000"/>
        <ComboBox x:Name="selectedStudentComboBox" IsEditable="True" HorizontalAlignment="Left" Margin="22,114,0,0" VerticalAlignment="Top" Width="120" BorderBrush="#89000000" SelectionChanged="NameBox_SelectionChanged"/>
        <ListBox x:Name="StudentListBox" HorizontalAlignment="Left" Height="593" Margin="586,10,0,0" VerticalAlignment="Top" Width="344" Background="#FF2F2F2F" SelectionChanged="StudentListBox_SelectionChanged"/>
        <Calendar x:Name="CalendarBox" HorizontalAlignment="Left" Margin="10,247,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="HoursTextbox" HorizontalAlignment="Left" Height="28" Margin="346,256,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="14"/>
        <Label Content="Hours" HorizontalAlignment="Left" Margin="296,256,0,0" VerticalAlignment="Top" FontSize="14"/>
        <TextBox  x:Name="EventNameTextBox" HorizontalAlignment="Left" Height="28" Margin="346,289,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="14" TextChanged="EventNameTextBox_TextChanged"/>
        <Label Content="Event" HorizontalAlignment="Left" Margin="296,289,0,0" VerticalAlignment="Top" FontSize="14" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="1.975"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.466"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button x:Name="CreateButtonClick" Content="Create" HorizontalAlignment="Left" Margin="296,331,0,0" VerticalAlignment="Top" Width="75" Click="CreateButton_Click"/>
        <Label x:Name="FnameLabel" Content="First Name" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Foreground="#DD000000" FontSize="16"/>
        <Label x:Name="LNameLabel" Content="Last Name" HorizontalAlignment="Left" Margin="161,10,0,0" VerticalAlignment="Top" Foreground="#DD000000" FontSize="16"/>
        <Label x:Name="IDLabel" Content="ID" HorizontalAlignment="Left" Margin="296,10,0,0" VerticalAlignment="Top" Foreground="#DD000000" FontSize="16"/>

    </Grid>
</Page>

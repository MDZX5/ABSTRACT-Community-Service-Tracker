<Page x:Class="MDZFBLACommunityService.PASelectPerson"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MDZFBLACommunityService"
      mc:Ignorable="d" 
      d:DesignHeight="613" d:DesignWidth="940"
      Title="PASelectPerson">

    <Grid>
        <Label Content="Select with: ID" HorizontalAlignment="Left" Margin="150,134,0,0" VerticalAlignment="Top" Width="120" FontSize="16"/>
        <TextBox x:Name="selectedStudentID" HorizontalAlignment="Left" Height="31" Margin="150,168,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Foreground="White" TextChanged="SelectedStudentID_TextChanged"/>
        <Button x:Name="SelectStudentButton" Content="Select" HorizontalAlignment="Left" Margin="176,218,0,0" VerticalAlignment="Top" Width="74" Click="SelectStudentButton_Click"/>

    </Grid>
</Page>
